---
import SuggestionPath from '../components/SuggestionPath.astro';
import Main from '../layouts/main.astro';
import { REPO_URL, AUTHOR_NAME, COPYRIGHT_YEAR, APP_NAME, APP_DESCRIPTION, APP_KEYWORDS, APP_URL } from '../lib/constants';

const mbtiType = Astro.url.searchParams.get('mbti') || 'ISFJ';
---

<Main content={{
  title: `${APP_NAME} - ${mbtiType} Food Recommendation`,
  description: `${mbtiType} ${APP_DESCRIPTION}`,
  keywords: `${mbtiType}, MBTI, 飲食推薦, ${APP_KEYWORDS}`,
  url: `${APP_URL}suggestion`,
}}>
    <main class="main-bg min-h-screen flex flex-col items-center justify-center py-8 px-4">
      <h1 class="text-2xl font-bold text-gray-800 mb-4">根據選項推薦路徑</h1>
      <SuggestionPath mbtiType={mbtiType} />

      <footer class="mt-10 text-center text-gray-500 text-sm">
        <a href={REPO_URL} target="_blank" rel="noopener noreferrer" class="bg-white shadow-sm px-4 py-2 rounded-full items-center inline-flex items-center gap-1 hover:opacity-80 transition-colors">
          <img src="/github-icon.svg" alt="GitHub" class="w-5 h-5" />
          <p class="inline-block">© {COPYRIGHT_YEAR} {APP_NAME} | {AUTHOR_NAME}</p>
        </a>
      </footer>
    </main>
</Main>