---
import '../styles/global.css';
import { APP_NAME, APP_DESCRIPTION, APP_KEYWORDS, APP_URL } from '../lib/constants';
import { ClientRouter } from 'astro:transitions';
interface Props {
	content: ContentProp;
}
type ContentProp = {
	title: string;
	description: string;
	keywords: string;
	url: string;
}
const { content } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={content.description || `${APP_NAME} - ${APP_DESCRIPTION}`} />
		<meta name="keywords" content={content.keywords || APP_KEYWORDS} />
		<meta property="og:title" content={content.title || `${APP_NAME} | MBTI 飲食推薦`} />
		<meta property="og:description" content={content.description || APP_DESCRIPTION} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={content.url || APP_URL} />
		<meta property="og:image" content="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;500;700&display=swap" rel="stylesheet">
		<title>{content.title || `${APP_NAME} | MBTI 飲食推薦`}</title>
		<ClientRouter/>
	</head>
	<body>
		<slot />
	</body>
</html>
